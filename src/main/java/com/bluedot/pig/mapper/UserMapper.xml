<?xml version="1.0" encoding="UTF-8"?>
<mapper namespace="com.bluedot.pig.mapper.UserMapper">

    <select id="getUser" resultType="com.bluedot.pig.pojo.domain.User">
        select * from t_user where id = #{id}
    </select>

    <select id="getAll" resultType="com.bluedot.pig.pojo.domain.User">
        select * from t_user
    </select>
    <insert id="insertUser">
        insert into t_user(id,username,password,if_freeze) values(#{id},#{username},#{password},#{ifFreeze})
    </insert>
    <update id="updateUser">
        update t_user set username =#{username} where id = #{}
    </update>
    <delete id="deleteUser">
        delete from t_user where id=#{id}
    </delete>
</mapper>